<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
              <property name="location" value="/WEB-INF/classes/properties/app.properties"/>
              <!--compile tests with this-->
              <!--<property name="location" value="/properties/app.properties"/>-->
       </bean>

       <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
              <property name="driverClassName" value="${hibernate.connection.driver_class}"/>
              <property name="url" value="${hibernate.connection.url}"/>
              <property name="username" value="${hibernate.connection.username}"/>
              <property name="password" value="${hibernate.connection.password}"/>
       </bean>


       <bean id="hibernate4SessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
              <property name="dataSource" ref="dataSource"/>
              <property name="annotatedClasses">
                     <list>
                            <value>com.chernenkov.marks.domain.Discipline</value>
                            <value>com.chernenkov.marks.domain.DisciplineParam</value>
                            <value>com.chernenkov.marks.domain.DisciplineSemestr</value>
                            <value>com.chernenkov.marks.domain.Group</value>
                            <value>com.chernenkov.marks.domain.Speciality</value>
                            <value>com.chernenkov.marks.domain.Student</value>
                            <value>com.chernenkov.marks.domain.StudentDisciplineSemestr</value>
                            <value>com.chernenkov.marks.domain.Teacher</value>
                            <value>com.chernenkov.marks.domain.Role</value>
                     </list>
              </property>
              <property name="hibernateProperties">
                     <props>
                            <prop key="hibernate.dialect">${hibernate.dialect}</prop>
                            <prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
                            <prop key="hibernate.default_schema">${hibernate.default_schema}</prop>
                     </props>
              </property>
       </bean>

       <!--TODO:add all beans-->
       <bean id="groupDAO" class="com.chernenkov.marks.dao.GroupDAOImpl">
              <property name="sessionFactory" ref="hibernate4SessionFactory"/>
       </bean>

       <bean id="groupService" class="com.chernenkov.marks.service.GroupServiceImpl">
              <property name="groupDAO" ref="groupDAO"/>
       </bean>

       <!--add properties-->

</beans>